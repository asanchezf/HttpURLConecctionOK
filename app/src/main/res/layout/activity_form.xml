<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.herprogramacion.monstalkers.FormActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtnombre"
        android:layout_marginTop="14dp"
        android:hint="Introduce el nombre"
        android:imeOptions="actionDone"
        android:maxLength="128"

        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtapellidos"
        android:layout_marginTop="14dp"
        android:hint="Introduce los apellidos"
        android:imeOptions="actionDone"
        android:maxLength="128"
        android:layout_below="@+id/txtnombre"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtdireccion"
        android:layout_marginTop="14dp"
        android:hint="Introduce la direccion"
        android:imeOptions="actionDone"
        android:maxLength="128"
        android:layout_below="@+id/txtapellidos"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txttelefono"
        android:layout_marginTop="14dp"
        android:hint="Introduce el telefono"
        android:imeOptions="actionDone"
        android:maxLength="128"
        android:layout_below="@+id/txtdireccion"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtemail"
        android:layout_marginTop="14dp"
        android:hint="Introduce el email"
        android:imeOptions="actionDone"
        android:maxLength="128"
        android:layout_below="@+id/txttelefono"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtobservaciones"
        android:layout_marginTop="14dp"
        android:hint="Introduce las observaciones"
        android:imeOptions="actionDone"
        android:maxLength="128"
        android:layout_below="@+id/txtemail"
        android:inputType="text" />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/SendButton"
        android:layout_below="@+id/txtobservaciones"


        android:layout_marginLeft="120dp"

        android:layout_marginTop="64dp"/>



</RelativeLayout>
</ScrollView>